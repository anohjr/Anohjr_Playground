{
    "compilerOptions": {
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "baseUrl": "src",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "types": ["vite/client"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "build", "dist", "cypress.config.ts", "cypress"]
}
